Public Function FieldInFormExists(frm As Form, FieldName As String) As Boolean
'Prüft ob das Feld mit dem angegebenen Namen existiert
Dim A As Long
Dim ctl As Control
On Error GoTo Err_

For Each ctl In frm.Controls
    If ctl.Name = FieldName Then
        FieldInFormExists = True
        Exit Function
    End If

Next

FieldInFormExists = False

Err_:
MsgBox (Err.Number)

End Function

