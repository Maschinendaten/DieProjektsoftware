Public Function AuftragZumProjekt(ProjektNr) As Long
'Sucht den Auftrag zum Projekt wenn es mehr wie einen gibt kommt 0 zurück
'Weil keine vorauswahl möglich ist
Dim nD As Long


nD = DCount("ID", "tblAufDaten", "ProNr" = ProjektNr)


If nD = 1 Then
    AuftragZumProjekt = DLookup("ID", "tblAufDaten", "ProNr" = ProjektNr)
Else
    AuftragZumProjekt = 0
End If


End Function