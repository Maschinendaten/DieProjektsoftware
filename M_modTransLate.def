Option Compare Database
Option Explicit


'Public GloLA As String Vorher global aber für was mg 20190610


'Dieses zeug soll die Möglichkeit einer Fremdsprachen Umschaltung ermöglichen






Function LA(sText As String) As String
'die Funktion dient zum übersetzen de Sprachen z.B. bei MsgBoxen der Text soll immer mit msbox la("Ein text") eingegeben werden auf deutsch alle texte stehen dann in einer Tabelle
'und können übersetzt werden
'umschalten der Sprache kann dann einfach der en Text ausgegeben werden
'Der Text dient gleichzeitig als Schlüssel für die Übersetzung
'Wenn ein Text nicht besteht wird er angelegt
Dim rs1 As DAO.Recordset
'On Error GoTo Err_
Dim GloLA As String
GloLA = "DE"

Set rs1 = CurrentDb.OpenRecordset("SELECT * FROM t_LiLangwhich WHERE LatextDE ='" & sText & "'")

If rs1.EOF Then
    rs1.AddNew
    rs1!LaTextDE = Nz(sText)
    rs1.Update
    LA = sText
Else
    
    If GloLA = "EN" Then
        LA = Nz(rs1!LaTextEN)
        If LA = "" Then LA = rs1!LaTextDE
        
    End If
    If GloLA = "DE" Then
        LA = rs1!LaTextDE
    End If
    
End If
    
    

Exit Function
Err_:
Resume Next

End Function



Function laForm(frm As Form)
'Sucht in dem Form nach Bezeichnungen die Übersetzt werden sollen

    Dim ctl As Control
    Dim S1 As String
    On Error Resume Next
    
 
    
    For Each ctl In frm.Controls
        If Not IsNull(frm(ctl.Name)) Then
            S1 = ctl.ControlTipText
            If S1 <> "" Then    'And Err.Number <> 0 Then
                Debug.Print ctl.Name, ctl.ControlTipText
                ctl.ControlTipText = LA(S1)
            End If
        End If
    Next ctl





End Function